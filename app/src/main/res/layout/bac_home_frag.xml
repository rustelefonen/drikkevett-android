<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_fragment_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/image_with_text">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/profile_image"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:onClick="openImageDialog"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/profile_image"
                    android:layout_alignTop="@+id/profile_image"
                    android:layout_alignRight="@+id/profile_image"
                    android:layout_alignBottom="@+id/profile_image"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="Bilde ikke valgt"
                    android:textColor="#000000" />
            </RelativeLayout>

            <!--66 64 64-->
            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="@color/cardColor"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/image_with_text"
                android:id="@+id/greeting_card_view"
                card_view:cardElevation="2dp"
                android:layout_margin="8dp">

                <TextView
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:text="test"
                    android:layout_width="match_parent"
                    android:textColor="@color/textColor"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@+id/profile_image"
                    android:layout_below="@+id/profile_picture"
                    android:id="@+id/quote_text_view"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                card_view:cardElevation="2dp"
                android:layout_below="@+id/greeting_card_view"
                android:id="@+id/goal_card_view"
                card_view:cardUseCompatPadding="true"
                card_view:cardBackgroundColor="@color/cardColor">

                <TextView
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/textColor"
                    android:gravity="center_vertical|left"
                    android:text="Denne grafen viser hvordan det står til med målet ditt. Ønsker du å vite mer klikk på fargene"
                    android:id="@+id/graph_home_text_view"
                    android:layout_alignParentLeft="true"/>
                <com.github.mikephil.charting.charts.PieChart
                    android:padding="8dp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center_vertical|right"
                    android:layout_alignParentRight="true"
                    android:id="@+id/goal_pie_chart"
                    ></com.github.mikephil.charting.charts.PieChart>
            </android.support.v7.widget.CardView>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/hello_message_text_view"/>-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/user_name_text_view"/>-->

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/goal_card_view"
                android:id="@+id/history_card_view"
                card_view:cardUseCompatPadding="true"
                card_view:cardBackgroundColor="@color/cardColor"
                android:layout_margin="8dp"
                card_view:cardElevation="2dp"
                >

                <com.github.mikephil.charting.charts.BarChart
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/history_bar_chart">
                </com.github.mikephil.charting.charts.BarChart>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/history_card_view"
                card_view:cardBackgroundColor="@color/cardColor"
                card_view:cardUseCompatPadding="true"
                android:layout_margin="8dp"
                card_view:cardElevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Total"

                    android:id="@+id/total_text_view"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_cost_text_view"
                    android:layout_alignParentLeft="true"
                    android:text="0,-\nKostnader"
                    android:lines="2"
                    android:layout_below="@+id/total_text_view"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:id="@+id/total_highest_bac"
                    android:text="0.00\nHøyeste\nPromille"
                    android:layout_below="@+id/total_text_view"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:text="0.00\nGjennomsnitt\nhøyeste promille"
                    android:id="@+id/total_avg_text_view"
                    android:layout_below="@+id/total_text_view"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forrige måned"
                    android:id="@+id/last_month_text_view"
                    android:layout_below="@+id/total_highest_bac"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/last_month_text_view"
                    android:lines="2"
                    android:id="@+id/last_month_cost_text_view"
                    android:text="0,-\nKostnader"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/last_month_text_view"
                    android:lines="3"
                    android:id="@+id/last_month_highest_bac_text_view"
                    android:text="0.00\nHøyeste\npromille"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/last_month_text_view"
                    android:lines="3"
                    android:id="@+id/last_month_avg_bac_text_view"
                    android:text="0.00\nGjennomsnitt\nhøyeste promille"
                    android:layout_alignParentRight="true"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>