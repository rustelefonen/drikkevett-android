<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true"
    android:background="@color/backgroundColor">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/viewA"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="openImageDialog">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/profile_image"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/shot"
                        android:clickable="true"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/myImageViewText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="32sp"
                        android:text="Trykk for å legge til bilde!"
                        android:paddingLeft="8dp"
                        android:textColor="@color/textColor"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    card_view:cardBackgroundColor="@color/cardColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_with_text"
                    android:id="@+id/greeting_card_view"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="4dp">

                    <TextView
                        android:padding="16dp"
                        android:text="test"
                        android:layout_width="match_parent"
                        android:textColor="@color/textColor"
                        android:layout_height="match_parent"
                        android:id="@+id/quote_text_view"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="4dp"
                    android:id="@+id/goal_card_view"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="@color/cardColor">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <com.github.mikephil.charting.charts.PieChart
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/goal_pie_chart"
                            android:layout_marginLeft="16dp"
                            android:layout_alignParentRight="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor"
                            android:text="Denne grafen viser hvordan det står til med målet ditt. Ønsker du å vite mer klikk på fargene"
                            android:id="@+id/graph_home_text_view"
                            android:layout_toLeftOf="@+id/goal_pie_chart"
                            android:layout_centerVertical="true"/>



                        <!--<LinearLayout-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content">-->
                            <!--<TextView-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:textColor="@color/textColor"-->
                                <!--android:text="Denne grafen viser hvordan det står til med målet ditt. Ønsker du å vite mer klikk på fargene"-->
                                <!--android:id="@+id/graph_home_text_view" />-->
                        <!--</LinearLayout>-->
                        <!--<LinearLayout-->
                            <!--android:layout_width="100dp"-->
                            <!--android:layout_height="100dp">-->

                            <!---->
                        <!--</LinearLayout>-->
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/history_card_view"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="@color/cardColor"
                    card_view:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/bar_chart_month"
                            android:paddingLeft="16dp"
                            android:paddingTop="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:text="Juni"
                                android:textColor="@color/textColor"
                                android:fontFamily="sans-serif-light"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="2016"
                                android:textColor="@color/textColor"
                                android:textSize="10sp"
                                />
                        </LinearLayout>

                        <com.github.mikephil.charting.charts.BarChart
                            android:layout_below="@id/bar_chart_month"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:id="@+id/history_bar_chart"
                            android:layout_margin="16dp">
                        </com.github.mikephil.charting.charts.BarChart>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_card_view"
                    card_view:cardBackgroundColor="@color/cardColor"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:padding="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-light"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/textColor"
                            android:text="Total"
                            android:layout_alignParentTop="true"
                            android:id="@+id/total_text_view"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/total_text_view"
                            android:paddingRight="32dp"
                            android:paddingLeft="32dp"
                            android:paddingBottom="16dp">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/total_text_view"
                                android:orientation="vertical"
                                android:layout_weight="33"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColor"
                                    android:textSize="24sp"
                                    android:layout_gravity="center"
                                    android:fontFamily="sans-serif-light"
                                    android:text="2000,-"
                                    android:id="@+id/total_count_text_view"
                                    />
                                <TextView
                                    android:textSize="10sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="@color/textColor"
                                    android:id="@+id/total_cost_text_view"
                                    android:text="Kostnader"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/total_text_view"
                                android:orientation="vertical"
                                android:layout_weight="33">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColor"
                                    android:layout_gravity="center"
                                    android:textSize="24sp"
                                    android:fontFamily="sans-serif-light"
                                    android:text="2,3"
                                    android:id="@+id/total_bac_count_text_view"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/textColor"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/total_highest_bac"
                                    android:text="Høyeste promille"
                                    android:textSize="10sp"
                                    android:layout_gravity="center"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/total_text_view"
                                android:orientation="vertical"
                                android:layout_weight="33">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColor"
                                    android:text="0,4"
                                    android:textSize="24sp"
                                    android:fontFamily="sans-serif-light"
                                    android:id="@+id/avg_bac_count_text_view"
                                    android:layout_gravity="center"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColor"
                                    android:lines="2"
                                    android:textSize="10sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Gjennomsnitt\nhøyeste promille"
                                    android:id="@+id/total_avg_text_view"/>

                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/cardColor"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="4dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:padding="16dp"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor"
                            android:text="Forrige måned"
                            android:id="@+id/last_month_text_view"
                            android:layout_alignParentTop="true"
                            android:gravity="center"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/last_month_text_view"
                            android:paddingRight="32dp"
                            android:paddingLeft="32dp"
                            android:paddingBottom="16dp">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/total_text_view"
                                android:orientation="vertical"
                                android:layout_weight="33"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColor"
                                    android:textSize="24sp"
                                    android:layout_gravity="center"
                                    android:fontFamily="sans-serif-light"
                                    android:text="2000,-"
                                    android:id="@+id/last_month_cost_text_view"
                                    />
                                <TextView
                                    android:textSize="10sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="@color/textColor"
                                    android:text="Kostnader"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/total_text_view"
                                android:orientation="vertical"
                                android:layout_weight="33">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColor"
                                    android:layout_gravity="center"
                                    android:textSize="24sp"
                                    android:fontFamily="sans-serif-light"
                                    android:text="2,3"
                                    android:id="@+id/last_month_highest_bac_text_view"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/textColor"
                                    android:layout_height="wrap_content"
                                    android:text="Høyeste promille"
                                    android:textSize="10sp"
                                    android:layout_gravity="center"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/total_text_view"
                                android:orientation="vertical"
                                android:layout_weight="33">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColor"
                                    android:text="0,4"
                                    android:textSize="24sp"
                                    android:fontFamily="sans-serif-light"
                                    android:id="@+id/last_month_avg_bac_text_view"
                                    android:layout_gravity="center"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColor"
                                    android:lines="2"
                                    android:textSize="10sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Gjennomsnitt\nhøyeste promille"/>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:borderWidth="2dp"
            app:backgroundTint="@color/greenSuper"
            app:fabSize="normal"
            android:layout_margin="16dp"
            android:onClick="openImageDialog"
            app:layout_anchor="@id/viewA"
            app:layout_anchorGravity="bottom|right|end"
            android:clickable="true"/>
    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.NestedScrollView>