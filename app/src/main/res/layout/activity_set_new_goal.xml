<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/cardColor"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundColor"
            android:padding="32dp"
            >
            <TextView
                android:text="Ny makspromille"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewHeader_newGoal"
                android:gravity="center"
                android:textSize="32dp"
                android:textColor="@color/textColor"
                android:layout_marginBottom="32dp"
                />
            <TextView
                android:text="@string/textNewGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/textColor"
                android:layout_marginBottom="64dp"
                />
            <EditText
                android:id="@+id/txtView_newGoalBAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_goals"
                android:hint="Oppgi en øvre promille"
                android:textColorHint="@color/greyTextColor"
                android:textColor="@color/backgroundColor"
                android:background="@color/textColor"
                android:textSize="16sp"
                android:layout_marginBottom="32dp"
                android:inputType="numberDecimal"
                android:padding="8dp"
                android:focusable="false"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar_newGoal"
                android:max="20"
                android:layout_marginBottom="32dp"
                />
            <EditText
                android:id="@+id/goal_reached_date_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_events_calendar"
                android:hint="Oppgi en dato for målet"
                android:textColorHint="@color/greyTextColor"
                android:textColor="@color/backgroundColor"
                android:background="@color/textColor"
                android:textSize="16sp"
                android:layout_marginBottom="32dp"
                android:focusable="false"
                android:onClick="showDialog"
                android:maxLines="1"
                android:padding="8dp"/>
            <Button
                android:text="Lagre nytt mål"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_saveNewGoal"
                android:background="@color/greenSuper"
                android:textColor="@color/textColor"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.v4.widget.NestedScrollView>

