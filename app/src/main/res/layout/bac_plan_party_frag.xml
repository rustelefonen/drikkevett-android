<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/layout_planPartyRunning_ID_PP"
            >
            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="@color/cardColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_one_plan_party"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            >
                            <TextView
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewBeerPP"
                                android:gravity="center"
                                android:minWidth="75dp"
                                android:textColor="@color/textColor"
                                android:textSize="35dp"
                                />
                            <TextView
                                android:text="ØL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewBeer_title_PP"
                                android:gravity="center"
                                android:minWidth="75dp"
                                android:textColor="@color/greyTextColor"
                                android:textSize="18dp"
                                />
                            <LinearLayout
                                android:paddingTop="4dp"
                                android:layout_width="10dp"
                                android:layout_height="3dp"
                                android:layout_gravity="center"
                                android:background="@color/beerColor"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewWinePP"
                                android:gravity="center"
                                android:minWidth="75dp"
                                android:textColor="@color/textColor"
                                android:textSize="35dp"
                                />
                            <TextView
                                android:text="VIN"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewWine_title_PP"
                                android:gravity="center"
                                android:minWidth="75dp"
                                android:textColor="@color/greyTextColor"
                                android:textSize="18dp"
                                />
                            <LinearLayout
                                android:paddingTop="4dp"
                                android:layout_width="10dp"
                                android:layout_height="3dp"
                                android:layout_gravity="center"
                                android:background="@color/wineColor"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.github.mikephil.charting.charts.PieChart
                            android:padding="16dp"
                            android:layout_width="175dp"
                            android:layout_height="175dp"
                            android:id="@+id/pie_chart_bac_plan_party">
                        </com.github.mikephil.charting.charts.PieChart>
                        <TextView
                            android:text="Kos deg!"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewQuotesPP"
                            android:textColor="@color/textColor"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            >
                            <TextView
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewDrinkPP"
                                android:gravity="center"
                                android:minWidth="75dp"
                                android:textColor="@color/textColor"
                                android:textSize="35dp"
                                />
                            <TextView
                                android:text="DRINK"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewDrink_title_PP"
                                android:gravity="center"
                                android:minWidth="75dp"
                                android:textColor="@color/greyTextColor"
                                android:textSize="18dp"
                                />
                            <LinearLayout
                                android:paddingTop="4dp"
                                android:layout_width="10dp"
                                android:layout_height="3dp"
                                android:layout_gravity="center"
                                android:background="@color/drinkColor"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewShotPP"
                                android:gravity="center"
                                android:textColor="@color/textColor"
                                android:minWidth="75dp"
                                android:textSize="35dp"
                                />
                            <TextView
                                android:text="SHOT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewShot_title_PP"
                                android:gravity="center"
                                android:minWidth="75dp"
                                android:textColor="@color/greyTextColor"
                                android:textSize="18dp"
                                />
                            <LinearLayout
                                android:paddingTop="4dp"
                                android:layout_width="10dp"
                                android:layout_height="3dp"
                                android:layout_gravity="center"
                                android:background="@color/shotColor"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="@color/cardColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_two_plan_party"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.support.v4.view.ViewPager
                        android:padding="16dp"
                        android:id="@+id/beer_scroll_plan_party"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        >
                    </android.support.v4.view.ViewPager>
                    <RadioGroup
                        android:id="@+id/page_indicator_radio_PP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        >
                        <RadioButton
                            android:id="@+id/radio_one_PP"
                            android:layout_weight="20"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/page_indicator_background"/>

                        <LinearLayout
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"/>

                        <RadioButton
                            android:id="@+id/radio_two_PP"
                            android:layout_weight="20"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/page_indicator_background"/>

                        <LinearLayout
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"/>

                        <RadioButton
                            android:id="@+id/radio_three_PP"
                            android:layout_weight="20"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/page_indicator_background"/>

                        <LinearLayout
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"/>

                        <RadioButton
                            android:id="@+id/radio_four__PP"
                            android:layout_weight="20"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/page_indicator_background"/>

                        <LinearLayout
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"/>
                    </RadioGroup>
                </LinearLayout>
                </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/layout_dayAfterRunning_ID_PP"
            android:paddingTop="30dp"
            >
            <TextView
                android:text="Dagen derpå kjører"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:minWidth="75dp"
                android:textColor="@color/textColor"
                android:textSize="25dp"
                />
            <TextView
                android:text="For å starte en ny kveld må du trykke på knappen\n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:minWidth="75dp"
                android:textColor="@color/textColor"
                android:textSize="15dp"
                />
        </LinearLayout>
        <Button
            android:paddingTop="50dp"
            android:text="Start Kvelden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonStatusPP"
            android:layout_gravity="right|bottom"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/textColor"
            />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>