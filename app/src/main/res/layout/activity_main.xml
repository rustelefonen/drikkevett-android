<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="rustelefonen.no.drikkevett_android.MainActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <include android:id="@+id/toolbar"
                layout="@layout/toolbar"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMaxWidth="0dp"
                app:tabGravity="fill"
                app:tabMode="fixed"
                android:tint="@color/textColor"
                app:tabIndicatorColor="@color/greenSuper"/>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        <com.github.clans.fab.FloatingActionMenu
            xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fab_menu_lol"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            fab:menu_animationDelayPerItem="50"
            fab:menu_colorNormal="@color/blueButton"
            fab:menu_colorPressed="@color/blueButton"
            app:layout_behavior="rustelefonen.no.drikkevett_android.ScrollFAMBehaviour">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_day_after_end_day_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_arrow_black_24dp"
                app:fab_colorNormal="@color/greenSuper"
                app:fab_colorPressed="@color/greenSuper"
                fab:fab_size="mini"
                fab:fab_label="Avslutt dagen derpå" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_plan_party_end_day_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_arrow_black_24dp"
                app:fab_colorNormal="@color/greenSuper"
                app:fab_colorPressed="@color/greenSuper"
                fab:fab_size="mini"
                fab:fab_label="Avslutt dagen derpå" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_plan_party_end_evening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_arrow_black_24dp"
                app:fab_colorNormal="@color/greenSuper"
                app:fab_colorPressed="@color/greenSuper"
                fab:fab_size="mini"
                fab:fab_label="Avslutt kvelden" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_start_night_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_arrow_black_24dp"
                app:fab_colorNormal="@color/greenSuper"
                app:fab_colorPressed="@color/greenSuper"
                fab:fab_size="mini"
                fab:fab_label="Start kvelden" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/bac_fab_add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fab_add"
                app:fab_colorNormal="@color/greenSuper"
                app:fab_colorPressed="@color/greenSuper"
                fab:fab_size="mini"
                fab:fab_label="Legg til" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/bac_fab_subtract_button"
                app:fab_colorNormal="@color/redSuper"
                app:fab_colorPressed="@color/redSuper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_ic_remove_24px"
                fab:fab_size="mini"
                fab:fab_label="Fjern" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fab_add"
                app:fab_colorNormal="@color/greenSuper"
                app:fab_colorPressed="@color/greenSuper"
                fab:fab_size="mini"
                fab:fab_label="Legg til" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/subtract_button"
                app:fab_colorNormal="@color/redSuper"
                app:fab_colorPressed="@color/redSuper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_ic_remove_24px"
                fab:fab_size="mini"
                fab:fab_label="Fjern" />


        </com.github.clans.fab.FloatingActionMenu>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextColor="#000000"
        app:itemIconTint="#000000"
        app:theme="@style/Widget.Design.NavigationView.Test"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_view" />
</android.support.v4.widget.DrawerLayout>